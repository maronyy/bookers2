<h1>User info</h1>
 <%= image_tag user.get_image(100,100) %>
 <table class = "table">
 <tr>
 <td><p>name</p></td>
 <td><p><%= user.name %></p></td>
 </tr>
 <tr>
 <td><p>introduction</p></td>
 <td><p><%= user.introduction %></p></td>
 <tr>
 </table>

 <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
 <i class="fa-solid fa-user-cog"></i>
 <% end %>

<div class="mt-4 mb-4">
<h2>New book</h2>
 <%= form_with model: @book, url: books_path, method: :post do |f| %>
<p>Title</p>
 <%= f.text_field :title %>
<p>Opinion</p>
 <%= f.text_field :body %>
 <div class="my-2">
  <button type="submit" class="btn btn-success">Create Book</button>
 </div>
<% end %>
</div>