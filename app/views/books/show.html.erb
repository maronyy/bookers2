<div>
 <%= flash[:notice1] %>
 <%= flash[:notice2] %>
</div>

<div class="container">
 <div class="row">
    <div class="col-lg-4">
      <%= render partial: 'inf', locals: { user: @user } %>
    </div>
 
    <div class="col-lg-8">
    <h1>Book detail</h1>
    <table class="table">
          <td><%= image_tag @book.user.get_image(100,100) %></td>
          <td><p><%= @book.title %></p></td>
          <td><p><%= @book.body %></p></td>
          <% if @book.user == current_user %>
          <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
          <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？"%></td>
          <% end %>
    </table>
 </div>
</div>
